{
    "i18n": {
        "contentPath": "path:./locales",
        "fallback": "en-US"
    },

    "specialization": {
    },

    "middleware": {
        "static": {
            "module": {
                "arguments": [ "path:./.build" ]
            }
        },
        "router": {
            "module": {
                "arguments": [{ "directory": "path:./controllers" }]
            }
        },

        "appsec": {
            "module": {
                "arguments": [
                    {
                        "xframe": "SAMEORIGIN",
                        "p3p": false,
                        "csp": false
                    }
                ]
            }
        },
        "csrf": {
          "enabled": true,
          "priority": 111,
          "route": "/((?!api))*",
          "module": {
            "name": "lusca",
            "method": "csrf",
            "arguments": [ {} ]
          }
        }
    }
}
